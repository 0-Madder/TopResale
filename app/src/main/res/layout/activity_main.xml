<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModel.MainActivity">

    <SearchView
        android:id="@+id/busqueda_searchBar"
        android:layout_width="0dp"
        android:layout_height="45sp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        android:iconifiedByDefault="false"
        android:queryBackground="@drawable/searchbar"
        android:queryHint="Buscar categoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ListView
        android:id="@+id/tiposDeProducto_listView"
        android:layout_width="389dp"
        android:layout_height="600dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:divider="@color/white"
        android:dividerHeight="5dp"
        android:padding="2dp"
        android:background="@color/carne"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ordenadoPor_textView" />

    <TextView
        android:id="@+id/ordenadoPor_textView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="@string/ordenacion"
        app:layout_constraintBottom_toTopOf="@+id/tiposDeProducto_listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busqueda_searchBar" />


</androidx.constraintlayout.widget.ConstraintLayout>