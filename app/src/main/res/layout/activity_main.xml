<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModel.MainActivity">

    <ImageView
        android:id="@+id/perfil_ImageView"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/perfil"
        app:layout_constraintEnd_toStartOf="@+id/barraSuperior_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barraSuperior_layout" />

    <FrameLayout
        android:id="@+id/barraSuperior_layout"
        android:layout_width="0dp"
        android:layout_height="58sp"
        android:layout_marginStart="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/barraDeBusqueda_searchBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent">

        </SearchView>
    </FrameLayout>

    <ListView
        android:id="@+id/tiposDeProducto_listView"
        android:layout_width="389dp"
        android:layout_height="543dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:divider="@color/white"
        android:dividerHeight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ordenadoPor_textView" />

    <TextView
        android:id="@+id/ordenadoPor_textView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="@string/ordenacion"
        app:layout_constraintBottom_toTopOf="@+id/tiposDeProducto_listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperior_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>